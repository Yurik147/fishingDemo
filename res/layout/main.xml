<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loc2_fon"
            android:id="@+id/imageView" />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loc2_00"
            android:id="@+id/imageView1"
            android:scaleType="fitXY"
            android:layout_below="@id/imageView" android:layout_alignRight="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"/>
    <ImageView
            android:layout_width="70sp"
            android:layout_height="200sp"
            android:id="@+id/imageView2"
            android:layout_alignParentLeft="true" android:layout_marginLeft="370dp"
            android:layout_alignBottom="@+id/imageView1" android:layout_alignParentTop="true"
            android:layout_marginTop="137dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView6" android:layout_alignTop="@+id/imageView8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView" android:layout_alignRight="@+id/imageView"
            android:layout_alignTop="@+id/imageView" android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Depth"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:enabled="true"
            android:textColor="#000000" android:layout_alignLeft="@+id/imageView3"
            android:layout_alignTop="@+id/textView1" android:layout_alignBottom="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:layout_marginLeft="20sp"
            android:id="@+id/textView3" android:layout_toRightOf="@+id/textView2"
            android:layout_alignBottom="@+id/textView" android:textColor="#000000" android:textStyle="bold"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bait_fon"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/imageView" />
    <ImageView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:enabled="false"
            android:id="@+id/imageView5" android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/imageView" android:background="@drawable/bar"/>
    <ImageView
            android:layout_width="9dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:enabled="false"
            android:id="@+id/imageView6" android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/imageView" android:background="@drawable/runner"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView7" android:layout_alignRight="@+id/imageView"
            android:layout_below="@+id/imageView4" android:background="@drawable/btn_put"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:id="@+id/imageView8" android:layout_alignRight="@+id/imageView"
        android:layout_alignBottom="@+id/imageView1" />
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:id="@+id/imageView9" android:layout_alignRight="@+id/imageView"
            android:layout_alignBottom="@+id/imageView1" />
</RelativeLayout>

